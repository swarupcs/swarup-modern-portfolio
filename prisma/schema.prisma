generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model PersonalInfo {
  id        String   @id @default(cuid())
  name      String
  title     String
  subtitle  String?
  email     String
  phone     String?
  location  String?
  website   String?
  github    String?
  linkedin  String?
  twitter   String?
  resume    String?
  avatar    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("personal_info")
}

model About {
  id          String   @id @default(cuid())
  bio         String
  description String?
  highlights  String[] 
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("about")
}

model Project {
  id           String              @id @default(cuid())
  title        String
  description  String
  image        String?
  liveUrl      String?             @map("live_url")
  githubUrl    String?             @map("github_url")
  category     String?
  featured     Boolean             @default(false)
  hidden       Boolean             @default(false)
  technologies ProjectTechnology[]
  createdAt    DateTime            @default(now()) @map("created_at")
  updatedAt    DateTime            @updatedAt @map("updated_at")

  @@map("projects")
}

model ProjectTechnology {
  id         String  @id @default(cuid())
  projectId  String  @map("project_id")
  technology String
  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_technologies")
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  category  String
  level     Int?     // 0-100
  icon      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("skills")
}

model Experience {
  id          String             @id @default(cuid())
  role        String
  company     String
  duration    String
  description String
  skills      ExperienceSkill[]
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")

  @@map("experience")
}

model ExperienceSkill {
  id           String     @id @default(cuid())
  experienceId String     @map("experience_id")
  skill        String
  experience   Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)

  @@map("experience_skills")
}

model Education {
  id          String   @id @default(cuid())
  degree      String
  institution String
  duration    String
  description String?
  grade       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("education")
}

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("contacts")
}
